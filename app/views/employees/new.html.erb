<h1> Employee Page </h1>

<div class="row">

	<div class="span6 offset3">

	<%= form_for(@employee) do |f| %>
		
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :age %>
		<%= f.text_field :age %>

		<%= f.label :operations %>
		<%= f.text_field :operations %>

		<%= f.label :finance %>
		<%= f.text_field :finance %>

		<%= f.label :marketing %>
		<%= f.text_field :marketing %>

		<%= f.submit "Create Employee", class: "btn btn-primary" %>

	<% end %>
</div>
</div>
